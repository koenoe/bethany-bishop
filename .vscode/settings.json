{
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "search.exclude": {
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true
  },
  "css.validate": false,
  "files.associations": {
    "*.css": "postcss"
  },
  "tailwindCSS.experimental.classRegex": [
    // This regex still a bit buggy, https://github.com/joe-bell/cva/discussions/85
    // Due to tailwind intellisense having a search limit of 1000, large cva functions will not 100% work
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ]
}
